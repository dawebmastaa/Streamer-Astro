---
import { getAllArticles } from "../../lib/cosmic";
import Card from "../../components/global/Card.astro";
const data = await getAllArticles();
const type = 'articles';
---
<section class="mb-10">
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl lg:py-24">
    <div class="max-w-3xl"
    <p class="text-xs font-bold tracking-wide uppercase text-zinc-500">articles</p>
    </div>
    <ul class="px-6 grid md:grid-cols-3 gap-6">
      {
        data.map((article) => (
          <Card
            title={article.title}
            href={article.slug}
            body={article.metadata.description}
            image={article.metadata.cover_image.url}
            type={type}
         />
        ))
      }
    </ul>
  </div>
  </section>